%ul.nav.nav-tabs
  - @grouped_matches.each_with_index do |(group, matches), i|
    %li{class: ("active" if i == 0)}
      %a{href: "#group_#{group.id}", "data-toggle" => "tab"}= "Grupo #{group.name}"
%br/
.tab-content
  - @grouped_matches.each_with_index do |(group, matches), i|
    %div{class: (i == 0 ? "tab-pane active" : "tab-pane"), id: "group_#{group.id}"}
      .row
        - matches.each do |match|
          .col-md-6
            .box-rounded
              .row
                .col-md-12.center
                  = match.team_a.name
                  %img.img-circle{src: "http://e.imguol.com/futebol/brasoes-redondos/100x100-borda-preta/#{match.team_a.slug}.png", width: 20}
                  %span.h4 
                  = "#{match.goals_a} X #{match.goals_b}"
                  %span.h4 
                  %img.img-circle{src: "http://e.imguol.com/futebol/brasoes-redondos/100x100-borda-preta/#{match.team_b.slug}.png", width: 20}
                  = match.team_b.name
                  %hr
              .row
                .col-md-8
                  %small
                    = "Apostas:"
                    %span{class: match.status_classes}= match.open_to_guesses
                    - unless match.my_guess.nil?
                      = "&nbsp;".html_safe
                      - match.scorers.each do |guess|
                        %a{href: match_details_path(match)}
                          %img.img-circle{src: guess.user.image, width: 20, title: guess.user.name}
                .col-md-4.right
                  %a.btn.btn-default.btn-xs{href: match_details_path(match)}
                    = "Detalhes &raquo;".html_safe